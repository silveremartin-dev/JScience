<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 http://maven.apache.org/xsd/assembly-2.2.0.xsd">
    <id>level2</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <!-- Level 1 -->
                <include>org/jscience/mathematics/**</include>
                <include>org/jscience/text/**</include>
                <include>org/jscience/util/**</include>
                <include>org/jscience/io/**</include>
                <include>org/jscience/net/**</include>
                <include>org/jscience/awt/**</include>
                <include>org/jscience/swing/**</include>
                <include>org/jscience/media/**</include>
                <include>org/jscience/ml/**</include>
                <include>org/jscience/measure/random/**</include>
                <include>org/jscience/help/**</include>
                <include>org/w3c/**</include>

                <!-- Level 2 -->
                <include>org/jscience/physics/**</include>
                <include>org/jscience/chemistry/**</include>
                <include>org/jscience/astronomy/**</include>
                <include>org/jscience/architecture/**</include>
                <include>org/jscience/devices/**</include>
                <include>org/jscience/computing/**</include>
                <include>org/jscience/engineering/**</include>
                <include>org/jscience/earth/**</include>
                <include>org/jscience/biology/**</include>
            </includes>
            <excludes>
                <exclude>org/jscience/earth/weather/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
